{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "--no-cache",
        "-t",
        "us-central1-docker.pkg.dev/$PROJECT_ID/mlops/pipeline-executor:0.0.2",
        "./Spotify-MLOps/builder_tool"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "us-central1-docker.pkg.dev/$PROJECT_ID/mlops/pipeline-executor:0.0.2"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
