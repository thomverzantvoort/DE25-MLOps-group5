{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "-m", "cp",
        "gs://${_MODEL_REPO}/*.pkl",
        "./Spotify-MLOps/prediction-api/models/"
      ],
      "id": "download-models"
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-api:latest",
        "./Spotify-MLOps/prediction-api"
      ],
      "waitFor": ["download-models"],
      "id": "build-prediction-api"
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-ui:latest",
        "./Spotify-MLOps/prediction-ui"
      ],
      "waitFor": ["download-models"],
      "id": "build-prediction-ui"
    },
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "cp",
        "gs://${_CONF_REPO}/parameters_spotify.json",
        "."
      ],
      "id": "download-parameters",
      "waitFor": ["build-prediction-api", "build-prediction-ui"]
    },
    {
      "name": "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/pipeline-executor:0.0.2",
      "args": [
        "--name=spotify-churn-training",
        "--pipeline_def=./Spotify-MLOps/ML-pipeline/spotify_churn_pipeline.yaml",
        "--pipeline_root=gs://${_MODEL_REPO}/pipeline_root",
        "--parameter_dict=./parameters_spotify.json"
      ],
      "id": "run-vertex-pipeline",
      "waitFor": ["download-parameters"]
    }
  ],
  "substitutions": {
    "_LOCATION": "us-central1",
    "_REPOSITORY": "mlops",
    "_MODEL_REPO": "spotify_models",
    "_CONF_REPO": "spotify_data_25"
  },
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  },
  "timeout": "3600s"
}
