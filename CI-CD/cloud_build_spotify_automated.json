{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "cp",
        "gs://${_MODEL_REPO}/spotify_models/*",              // 游릴 Copy your trained Spotify models
        "./prediction-api/models/"                           // 游릴 Adjusted path to match your repo structure
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-api:0.0.1",  // 游릴 Changed image name
        "./prediction-api"                                                                      // 游릴 Correct directory
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-ui:0.0.1",   // 游릴 Changed image name
        "./prediction-ui"                                                                       // 游릴 Correct directory
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-api:0.0.1"   // 游릴 Changed image name
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-ui:0.0.1"    // 游릴 Changed image name
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "spotify-prediction-api",                          // 游릴 Renamed service
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/spotify-prediction-api:0.0.1",  // 游릴 Updated reference
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "5000",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated"
      ],
      "id": "spotify-prediction-api-deploy"
    },
    {
      "name": "ubuntu",
      "args": ["sleep", "60"],
      "waitFor": ["spotify-prediction-api-deploy"],
      "id": "sleep-delay"
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "gcloud run services list --platform managed | grep https: | head -1 | awk '{print $4}' > /workspace/api_url.text"
      ],
      "waitFor": ["sleep-delay"],
      "id": "api-url-extraction"
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "gcloud run deploy spotify-prediction-ui --image ${_LOCATION}-docker.pkg.dev/${PROJECT_ID}/${_REPOSITORY}/spotify-prediction-ui:0.0.1 --set-env-vars PREDICTOR_API=$(cat /workspace/api_url.text)/predict/ --region us-central1 --platform managed --port 5000 --cpu 2 --memory 4G --allow-unauthenticated"  // 游릴 Updated environment variable + endpoint
      ],
      "waitFor": ["api-url-extraction"]
    }
  ],
  "artifacts": {
    "objects": {
      "location": "gs://${_TEMP_REPO}/",
      "paths": ["/workspace/api_url.text"]
    }
  },
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
